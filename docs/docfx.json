{
  "build": {
    "content": [
      { "files": "**/*.{md,yml}", "exclude": "**/include/**" }
    ],
    "resource": [
      { "files": "**/images/**" }
    ],
    "sitemap": {
      "baseUrl": "https://songsihy.github.io/",
      "priority": 0.5,
      "changefreq": "daily"
    },
    "output": "_site",
    "template": ["default", "modern"],
    "postProcessors": [ "ExtractSearchIndex" ],
    "globalMetadata": {
      "_appTitle": "Song Website",
      "_enableSearch": true,
      "_enableNewTab": false
    }    
  }
}
