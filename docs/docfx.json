{
  "build": {
    "content": [
      { "files": "**/*.{md,yml}", "exclude": "**/include/**" }
    ],
    "resource": [
      { "files": "**/images/**" }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "postProcessors": [ "ExtractSearchIndex" ],
    "globalMetadata": {
      "_appTitle": "Song Website",
      "_enableSearch": true,
      "_enableNewTab": false
    }    
  }
}
